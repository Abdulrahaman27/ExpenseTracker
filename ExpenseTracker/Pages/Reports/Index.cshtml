@page
@model ExpenseTracker.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Financial Reports";
}

<div class="container-fluid">
    <!-- Messages -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-@(Model.MessageType ?? "info") alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Report Filters -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-filter me-2"></i>Report Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="Year" class="form-label">Year</label>
                    <select class="form-select" asp-for="Year" onchange="this.form.submit()">
                        @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                        {
                            <option value="@y">@y</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="Month" class="form-label">Month</label>
                    <select class="form-select" asp-for="Month" onchange="this.form.submit()">
                        @for (int m = 1; m <= 12; m++)
                        {
                            <option value="@m">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="StartDate" class="form-label">Custom Start Date</label>
                    <input type="date" class="form-control" asp-for="StartDate" />
                </div>
                <div class="col-md-3">
                    <label for="EndDate" class="form-label">Custom End Date</label>
                    <input type="date" class="form-control" asp-for="EndDate" />
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-sync-alt me-1"></i> Update Reports
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Monthly Report Summary -->
    @if (Model.MonthlyReport != null)
    {
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>Monthly Report - @Model.Year/@Model.Month.ToString("00")
                        </h5>
                        <form method="post" asp-page-handler="ExportMonthly">
                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-download me-1"></i> Export
                            </button>
                        </form>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 text-center">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="text-muted">Income</h6>
                                    <h4 class="text-success">@Model.MonthlyReport.TotalIncome.ToString("C")</h4>
                                </div>
                            </div>
                            <div class="col-md-3 text-center">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="text-muted">Expenses</h6>
                                    <h4 class="text-danger">@Model.MonthlyReport.TotalExpenses.ToString("C")</h4>
                                </div>
                            </div>
                            <div class="col-md-3 text-center">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="text-muted">Net Balance</h6>
                                    <h4 class="@(Model.MonthlyReport.NetBalance >= 0 ? "text-success" : "text-danger")">
                                        @Model.MonthlyReport.NetBalance.ToString("C")
                                    </h4>
                                </div>
                            </div>
                            <div class="col-md-3 text-center">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="text-muted">Budget Status</h6>
                                    <h4>
                                        <span class="badge bg-success">@Model.MonthlyReport.BudgetSummary.OnTrackBudgets</span>
                                        <span class="badge bg-warning">@Model.MonthlyReport.BudgetSummary.WarningBudgets</span>
                                        <span class="badge bg-danger">@Model.MonthlyReport.BudgetSummary.ExceededBudgets</span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Top Categories</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.MonthlyReport.CategorySummaries != null && Model.MonthlyReport.CategorySummaries.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var category in Model.MonthlyReport.CategorySummaries.Take(5))
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="badge" style="background-color: @category.CategoryColor">
                                                &nbsp;&nbsp;
                                            </span>
                                            <span class="ms-2">@category.CategoryName</span>
                                        </div>
                                        <div class="text-end">
                                            <div>@category.Amount.ToString("C")</div>
                                            <small class="text-muted">@category.Percentage.ToString("F1")%</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No expense data available.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Yearly Summary Chart -->
    @if (Model.MonthlySummaries != null)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-chart-line me-2"></i>Monthly Trends - @Model.Year</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th class="text-end">Income</th>
                            <th class="text-end">Expenses</th>
                            <th class="text-end">Balance</th>
                            <th class="text-center">Trend</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var month in Model.MonthlySummaries)
                        {
                            <tr>
                                <td>@month.MonthName</td>
                                <td class="text-end text-success">@month.Income.ToString("C")</td>
                                <td class="text-end text-danger">@month.Expenses.ToString("C")</td>
                                <td class="text-end @(month.Balance >= 0 ? "text-success" : "text-danger")">
                                    @month.Balance.ToString("C")
                                </td>
                                <td class="text-center">
                                    @if (month.Balance > 0)
                                    {
                                        <i class="fas fa-arrow-up text-success"></i>
                                    }
                                    else if (month.Balance < 0)
                                    {
                                        <i class="fas fa-arrow-down text-danger"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-minus text-muted"></i>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Budget Status Details -->
    @if (Model.MonthlyReport?.BudgetSummary?.BudgetStatuses != null)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-chart-bar me-2"></i>Budget Performance</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Budget</th>
                                <th>Category</th>
                                <th class="text-end">Planned</th>
                                <th class="text-end">Actual</th>
                                <th class="text-end">Difference</th>
                                <th>Progress</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var budget in Model.MonthlyReport.BudgetSummary.BudgetStatuses)
                            {
                                var percentage = budget.BudgetAmount > 0 ? (budget.ActualSpending / budget.BudgetAmount) * 100 : 0;
                                var isOverBudget = budget.ActualSpending > budget.BudgetAmount;
                                <tr>
                                    <td>@budget.BudgetName</td>
                                    <td>@(budget.CategoryName ?? "All Categories")</td>
                                    <td class="text-end">@budget.BudgetAmount.ToString("C")</td>
                                    <td class="text-end @(isOverBudget ? "text-danger fw-bold" : "text-success")">
                                        @budget.ActualSpending.ToString("C")
                                    </td>
                                    <td class="text-end @((budget.BudgetAmount - budget.ActualSpending) < 0 ? "text-danger" : "text-success")">
                                        @((budget.BudgetAmount - budget.ActualSpending).ToString("C"))
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar @(isOverBudget ? "bg-danger" : percentage >= 80 ? "bg-warning" : "bg-success")"
                                                 style="width: @(Math.Min(percentage, 100))%">
                                            </div>
                                        </div>
                                        <small class="text-muted">@percentage.ToString("F1")%</small>
                                    </td>
                                    <td>
                                        @if (isOverBudget)
                                        {
                                            <span class="badge bg-danger">Exceeded</span>
                                        }
                                        else if (percentage >= 80)
                                        {
                                            <span class="badge bg-warning">Warning</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">On Track</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Category Report -->
    @if (Model.CategoryReport != null)
    {
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-tags me-2"></i>Category Analysis</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        @if (Model.CategoryReport.CategorySpendings != null && Model.CategoryReport.CategorySpendings.Any())
                        {
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th class="text-end">Amount</th>
                                        <th class="text-end">Percentage</th>
                                        <th class="text-center">Distribution</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.CategoryReport.CategorySpendings)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge" style="background-color: @category.CategoryColor">
                                                    @category.CategoryName
                                                </span>
                                            </td>
                                            <td class="text-end">@category.Amount.ToString("C")</td>
                                            <td class="text-end">@category.Percentage.ToString("F1")%</td>
                                            <td>
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar" style="width: @category.Percentage%; background-color: @category.CategoryColor"></div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p class="text-muted">No category data available.</p>
                        }
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">Summary</h6>
                                <p class="card-text">
                                    <small class="text-muted">Average Transaction:</small><br />
                                    <strong>@Model.CategoryReport.AverageTransactionAmount.ToString("C")</strong>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">Top Categories:</small><br />
                                    @if (Model.CategoryReport.TopCategories != null)
                                    {
                                        @foreach (var cat in Model.CategoryReport.TopCategories)
                                        {
                                            <span class="badge me-1" style="background-color: @cat.Color">@cat.Name</span>
                                        }
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .progress {
        background-color: #e9ecef;
        border-radius: 4px;
        overflow: hidden;
    }

    .progress-bar {
        border-radius: 4px;
        transition: width 0.3s ease;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }

    .list-group-item {
        border-left: none;
        border-right: none;
    }
</style>