@page
@model ExpenseTracker.Pages.Transactions.DetailsModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>Transaction Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Transaction.Description</dd>

                <dt class="col-sm-3">Amount</dt>
                <dd class="col-sm-9 @(Model.Transaction.Type == ExpenseTracker.Data.Models.TransactionType.Income ? "text-success" : "text-danger")">
                    @Model.Transaction.Amount.ToString("C")
                </dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Transaction.Date.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Transaction.Type == ExpenseTracker.Data.Models.TransactionType.Income ? "bg-success" : "bg-danger")">
                        @Model.Transaction.Type
                    </span>
                </dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">
                    @if (Model.Transaction.Category != null)
                    {
                        <span class="badge" style="background-color: @Model.Transaction.Category.Color">
                            @Model.Transaction.Category.Name
                        </span>
                    }
                </dd>

                @if (!string.IsNullOrEmpty(Model.Transaction.Notes))
                {
                    <dt class="col-sm-3">Notes</dt>
                    <dd class="col-sm-9">@Model.Transaction.Notes</dd>
                }

                @if (Model.Transaction.IsRecurring)
                {
                    <dt class="col-sm-3">Recurring</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@Model.Transaction.RecurringType</span>
                        @if (Model.Transaction.RecurringEndDate.HasValue)
                        {
                            <br>

                            <small>Ends: @Model.Transaction.RecurringEndDate.Value.ToString("MMM dd, yyyy")</small>
                        }
                    </dd>
                }
            </dl>

            <div class="mt-4">
                <a asp-page="Edit" asp-route-id="@Model.Transaction.Id" class="btn btn-primary">Edit</a>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>