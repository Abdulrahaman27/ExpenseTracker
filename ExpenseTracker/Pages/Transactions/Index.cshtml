@page
@model ExpenseTracker.Pages.Transactions.IndexModel

@{
    ViewData["Title"] = "Transactions";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-receipt me-2"></i>Transactions
        </h1>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Transaction
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Income
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalIncome.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-arrow-up-circle fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Total Expenses
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalExpenses.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-arrow-down-circle fa-2x text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Net Balance
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.NetBalance.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-wallet2 fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Transactions
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-receipt fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-funnel"></i> Filter Transactions
            </h6>
            <form method="post" asp-page-handler="ClearFilters">
                <button type="submit" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </button>
            </form>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Start Date</label>
                    <input type="date" asp-for="StartDate"
                           value="@Model.StartDate?.ToString("yyyy-MM-dd")"
                           class="form-control" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">End Date</label>
                    <input type="date" asp-for="EndDate"
                           value="@Model.EndDate?.ToString("yyyy-MM-dd")"
                           class="form-control" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Category</label>
                    <select asp-for="CategoryId" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Type</label>
                    <select asp-for="Type" class="form-select">
                        <option value="">All Types</option>
                        <option value="0">Expense</option>
                        <option value="1">Income</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Search</label>
                    <input type="text" asp-for="Search" class="form-control" placeholder="Description...">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Apply Filters
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="card shadow">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-table"></i> Transaction List
                <span class="badge bg-secondary ms-2">@Model.TotalCount records</span>
            </h6>
            <div>
                <span class="me-3">Page @Model.CurrentPage of @Model.TotalPages</span>
                <a asp-page="Create" class="btn btn-sm btn-success">
                    <i class="bi bi-plus-circle"></i> New
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Transactions.Any())
{
    <!-- Bulk Actions Toolbar -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <button type="button" class="btn btn-outline-primary btn-sm" onclick="selectAllTransactions()">
                <i class="bi bi-check-square"></i> Select All
            </button>
            <button type="button" class="btn btn-outline-danger btn-sm" id="bulkDeleteBtn"
                    onclick="showBulkDeleteModal()" disabled>
                <i class="bi bi-trash"></i> Delete Selected
            </button>
            <span class="ms-2 text-muted" id="selectedInfo">
                <span id="selectedCountDisplay">0</span> selected
            </span>
        </div>
    </div>
    
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th width="50">
                        <input type="checkbox" id="selectAllHeader" onclick="toggleAllCheckboxes()">
                    </th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Type</th>
                    <th class="text-end">Amount</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model.Transactions)
                {
                    <tr>
                        <td>
                            <input type="checkbox" 
                                   class="transaction-checkbox" 
                                   value="@transaction.Id"
                                   onchange="updateSelection()">
                        </td>
                        <td>@transaction.Date.ToString("MMM dd, yyyy")</td>
                        <td>
                            @transaction.Description
                            @if (transaction.IsRecurring)
                            {
                                <span class="badge bg-info ms-1" title="Recurring">
                                    <i class="bi bi-arrow-repeat"></i>
                                </span>
                            }
                        </td>
                        <td>
                            @if (transaction.Category != null)
                            {
                                <span class="badge" style="background-color: @transaction.Category.Color">
                                    <i class="bi @transaction.Category.Icon"></i>
                                    @transaction.Category.Name
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Uncategorized</span>
                            }
                        </td>
                        <td>
                            @if (transaction.Type == ExpenseTracker.Data.Models.TransactionType.Income)
                            {
                                <span class="badge bg-success">Income</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Expense</span>
                            }
                        </td>
                        <td class="text-end fw-bold @(transaction.Type == ExpenseTracker.Data.Models.TransactionType.Income ? "text-success" : "text-danger")">
                            @(transaction.Type == ExpenseTracker.Data.Models.TransactionType.Income ? "+" : "-")@transaction.Amount.ToString("C")
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(transaction.Notes))
                            {
                                <i class="bi bi-chat-left-text" title="@transaction.Notes"></i>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-page="Edit" asp-route-id="@transaction.Id"
                                   class="btn btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="Details" asp-route-id="@transaction.Id"
                                   class="btn btn-outline-info" title="Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <button type="button" class="btn btn-outline-danger" title="Delete"
                                        onclick="confirmDelete(@transaction.Id, '@transaction.Description')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <!-- Hidden form for bulk delete -->
    <form method="post" asp-page-handler="DeleteSelected" id="bulkDeleteForm">
        <input type="hidden" name="SelectedIds" id="selectedIdsInput" value="">
    </form>
    
    <!-- Bulk Delete Confirmation Modal -->
    <div class="modal fade" id="bulkDeleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Bulk Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <span id="deleteCount">0</span> selected transaction(s)?</p>
                    <p class="text-danger"><strong>This action cannot be undone!</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="submitBulkDelete()">Delete Selected</button>
                </div>
            </div>
        </div>
    </div>
                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Transaction pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)"
                                   asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                   asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                   asp-route-categoryId="@Model.CategoryId"
                                   asp-route-search="@Model.Search"
                                   asp-route-type="@Model.Type">
                                    Previous
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-route-currentPage="@i"
                                       asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                       asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                       asp-route-categoryId="@Model.CategoryId"
                                       asp-route-search="@Model.Search"
                                       asp-route-type="@Model.Type">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)"
                                   asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                   asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                   asp-route-categoryId="@Model.CategoryId"
                                   asp-route-search="@Model.Search"
                                   asp-route-type="@Model.Type">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </nav>
                }

                <!-- Export Options -->
                <div class="mt-3">
                    <div class="btn-group">
                        <a href="@Url.Page("Index", new { export = "csv",
                               startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                               endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                               categoryId = Model.CategoryId,
                               search = Model.Search,
                               type = Model.Type })"
                           class="btn btn-sm btn-outline-success">
                            <i class="bi bi-file-earmark-arrow-down"></i> Export to CSV
                        </a>
                        <a href="@Url.Page("Index", new { export = "print",
                               startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                               endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                               categoryId = Model.CategoryId,
                               search = Model.Search,
                               type = Model.Type })"
                           class="btn btn-sm btn-outline-primary" onclick="window.print(); return false;">
                            <i class="bi bi-printer"></i> Print
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-receipt fa-4x mb-3"></i>
                    <h4>No transactions found</h4>
                    <p class="mb-4">@(string.IsNullOrEmpty(Model.Search) ? "Try adding some transactions or adjust your filters." : "No transactions match your search criteria.")</p>
                    <a asp-page="Create" class="btn btn-success me-2">
                        <i class="bi bi-plus-circle"></i> Add Your First Transaction
                    </a>
                    <a asp-page="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-clockwise"></i> Clear Filters
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Quick Stats Modal -->
<div class="modal fade" id="quickStatsModal" tabindex="-1" aria-labelledby="quickStatsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="quickStatsModalLabel">Transaction Statistics</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="text-success fw-bold">Income</div>
                            <div class="h4">@Model.TotalIncome.ToString("C")</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="text-danger fw-bold">Expenses</div>
                            <div class="h4">@Model.TotalExpenses.ToString("C")</div>
                        </div>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <div class="fw-bold">Net Balance</div>
                    <div class="h3 @(Model.NetBalance >= 0 ? "text-success" : "text-danger")">
                        @Model.NetBalance.ToString("C")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this transaction?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone.
                </div>
                <form id="deleteForm" method="post">
                    <input type="hidden" id="deleteId" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="document.getElementById('deleteForm').submit();">
                    <i class="bi bi-trash me-2"></i>Delete Transaction
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Bulk Delete Confirmation Modal -->
<div class="modal fade" id="bulkDeleteModal" tabindex="-1" aria-labelledby="bulkDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="bulkDeleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Bulk Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <span id="selectedCount" class="fw-bold">0</span> selected transactions?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. All selected transactions will be permanently deleted.
                </div>
                <form id="bulkDeleteForm" method="post" asp-page-handler="BulkDelete">
                    <input type="hidden" id="selectedIds" name="selectedIds" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="document.getElementById('bulkDeleteForm').submit();">
                    <i class="bi bi-trash me-2"></i>Delete Selected
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-submit form when filters change (optional)
            document.querySelectorAll('#filterForm select, #filterForm input').forEach(function(element) {
                element.addEventListener('change', function() {
                    if (this.type !== 'text') {
                        document.getElementById('filterForm').submit();
                    }
                });
            });

            // Quick stats button
            var quickStatsBtn = document.getElementById('quickStatsBtn');
            if (quickStatsBtn) {
                quickStatsBtn.addEventListener('click', function() {
                    var modal = new bootstrap.Modal(document.getElementById('quickStatsModal'));
                    modal.show();
                });
            }

            // Row click for details (optional)
            document.querySelectorAll('tbody tr').forEach(function(row) {
                row.addEventListener('click', function(e) {
                    if (!e.target.closest('.btn-group')) {
                        var editLink = this.querySelector('a[title="Edit"]');
                        if (editLink) {
                            window.location = editLink.href;
                        }
                    }
                });
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    <script>
        // Array to store selected transaction IDs
        let selectedTransactions = [];

        // Select All functionality
        function selectAllTransactions() {
            const checkboxes = document.querySelectorAll('.transaction-checkbox');
            const selectAllBtn = document.querySelector('#selectAllHeader');
            const isChecked = selectedTransactions.length < checkboxes.length;

            checkboxes.forEach(checkbox => {
                checkbox.checked = isChecked;
                const id = parseInt(checkbox.value);

                if (isChecked && !selectedTransactions.includes(id)) {
                    selectedTransactions.push(id);
                } else if (!isChecked) {
                    selectedTransactions = selectedTransactions.filter(x => x !== id);
                }
            });

            selectAllBtn.checked = isChecked;
            updateSelection();
        }

        // Toggle all checkboxes (for header checkbox)
        function toggleAllCheckboxes() {
            const selectAllBtn = document.querySelector('#selectAllHeader');
            const checkboxes = document.querySelectorAll('.transaction-checkbox');

            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAllBtn.checked;
                const id = parseInt(checkbox.value);

                if (selectAllBtn.checked && !selectedTransactions.includes(id)) {
                    selectedTransactions.push(id);
                } else if (!selectAllBtn.checked) {
                    selectedTransactions = selectedTransactions.filter(x => x !== id);
                }
            });

            updateSelection();
        }

        // Update selection count and UI
        function updateSelection() {
            const checkboxes = document.querySelectorAll('.transaction-checkbox');
            selectedTransactions = [];

            checkboxes.forEach(checkbox => {
                if (checkbox.checked) {
                    selectedTransactions.push(parseInt(checkbox.value));
                }
            });

            // Update display
            const selectedCountDisplay = document.getElementById('selectedCountDisplay');
            const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');
            const selectAllBtn = document.querySelector('#selectAllHeader');

            selectedCountDisplay.textContent = selectedTransactions.length;
            bulkDeleteBtn.disabled = selectedTransactions.length === 0;

            // Update "Select All" button text
            const selectAllButton = document.querySelector('button[onclick="selectAllTransactions()"]');
            if (selectedTransactions.length === checkboxes.length && checkboxes.length > 0) {
                selectAllButton.innerHTML = '<i class="bi bi-x-square"></i> Deselect All';
                selectAllBtn.checked = true;
            } else {
                selectAllButton.innerHTML = '<i class="bi bi-check-square"></i> Select All';
                selectAllBtn.checked = false;
            }

            // Indeterminate state for select all checkbox
            selectAllBtn.indeterminate = selectedTransactions.length > 0 && selectedTransactions.length < checkboxes.length;

            // Highlight selected rows
            checkboxes.forEach(checkbox => {
                const row = checkbox.closest('tr');
                if (checkbox.checked) {
                    row.classList.add('selected-row');
                } else {
                    row.classList.remove('selected-row');
                }
            });
        }

        // Show bulk delete confirmation modal
        function showBulkDeleteModal() {
            if (selectedTransactions.length === 0) {
                alert('Please select at least one transaction to delete.');
                return;
            }

            document.getElementById('deleteCount').textContent = selectedTransactions.length;
            const modal = new bootstrap.Modal(document.getElementById('bulkDeleteModal'));
            modal.show();
        }

        // Submit bulk delete
        function submitBulkDelete() {
            // Set the selected IDs in the hidden input
            document.getElementById('selectedIdsInput').value = selectedTransactions.join(',');

            // Submit the form
            document.getElementById('bulkDeleteForm').submit();
        }

        // Single delete confirmation (your existing function)
        function confirmDelete(id, description) {
            if (confirm(`Are you sure you want to delete "${description}"?`)) {
                // Create a form and submit it
                const form = document.createElement('form');
                form.method = 'post';
                form.action = window.location.pathname + '?handler=Delete&id=' + id;

                // Add antiforgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);

                document.body.appendChild(form);
                form.submit();
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateSelection();
        });
    </script>
    <style>
        /* Style for checkboxes */
        .transaction-checkbox {
            cursor: pointer;
            transform: scale(1.2);
        }

        #selectAllHeader {
            cursor: pointer;
            transform: scale(1.2);
        }

        /* Highlight selected rows */
        tr.selected-row {
            background-color: rgba(13, 110, 253, 0.1) !important;
        }

            tr.selected-row:hover {
                background-color: rgba(13, 110, 253, 0.15) !important;
            }

        /* Make the bulk actions toolbar more visible */
        #selectedInfo {
            font-size: 0.9rem;
        }

        #bulkDeleteBtn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        #bulkDeleteBtn:not(:disabled):hover {
            background-color: #dc3545;
            color: white;
        }

        tbody tr:hover {
            cursor: pointer;
            background-color: rgba(0, 0, 0, 0.02);
        }

