@page
@model ExpenseTracker.Pages.Transactions.IndexModel

@{
    ViewData["Title"] = "Transactions";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="bi bi-receipt me-2"></i>Transactions
        </h1>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Transaction
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Income
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalIncome.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-arrow-up-circle fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Total Expenses
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalExpenses.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-arrow-down-circle fa-2x text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Net Balance
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.NetBalance.ToString("C")</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-wallet2 fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Transactions
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-receipt fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-funnel"></i> Filter Transactions
            </h6>
            <form method="post" asp-page-handler="ClearFilters">
                <button type="submit" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </button>
            </form>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Start Date</label>
                    <input type="date" asp-for="StartDate" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">End Date</label>
                    <input type="date" asp-for="EndDate" class="form-control">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Category</label>
                    <select asp-for="CategoryId" class="form-select">
                        <option value="">All Categories</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Type</label>
                    <select asp-for="Type" class="form-select">
                        <option value="">All Types</option>
                        <option value="0">Expense</option>
                        <option value="1">Income</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Search</label>
                    <input type="text" asp-for="Search" class="form-control" placeholder="Description...">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Apply Filters
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="card shadow">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-table"></i> Transaction List
                <span class="badge bg-secondary ms-2">@Model.TotalCount records</span>
            </h6>
            <div>
                <span class="me-3">Page @Model.CurrentPage of @Model.TotalPages</span>
                <a asp-page="Create" class="btn btn-sm btn-success">
                    <i class="bi bi-plus-circle"></i> New
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Transactions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Type</th>
                                <th class="text-end">Amount</th>
                                <th>Notes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model.Transactions)
                            {
                                <tr>
                                    <td>@transaction.Date.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @transaction.Description
                                        @if (transaction.IsRecurring)
                                        {
                                            <span class="badge bg-info ms-1" title="Recurring">
                                                <i class="bi bi-arrow-repeat"></i>
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (transaction.Category != null)
                                        {
                                            <span class="badge" style="background-color: @transaction.Category.Color">
                                                <i class="bi @transaction.Category.Icon"></i>
                                                @transaction.Category.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Uncategorized</span>
                                        }
                                    </td>
                                    <td>
                                        @if (transaction.Type == ExpenseTracker.Data.Models.TransactionType.Income)
                                        {
                                            <span class="badge bg-success">Income</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Expense</span>
                                        }
                                    </td>
                                    <td class="text-end fw-bold @(transaction.Type == ExpenseTracker.Data.Models.TransactionType.Income ? "text-success" : "text-danger")">
                                        @(transaction.Type == ExpenseTracker.Data.Models.TransactionType.Income ? "+" : "-")@transaction.Amount.ToString("C")
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(transaction.Notes))
                                        {
                                            <i class="bi bi-chat-left-text" title="@transaction.Notes"></i>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="Edit" asp-route-id="@transaction.Id"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-page="Details" asp-route-id="@transaction.Id"
                                               class="btn btn-outline-info" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@transaction.Id"
                                                  onsubmit="return confirm('Are you sure you want to delete this transaction?');">
                                                <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Transaction pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-route-currentPage="@(Model.CurrentPage - 1)"
                                   asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                   asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                   asp-route-categoryId="@Model.CategoryId"
                                   asp-route-search="@Model.Search"
                                   asp-route-type="@Model.Type">
                                    Previous
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-route-currentPage="@i"
                                       asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                       asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                       asp-route-categoryId="@Model.CategoryId"
                                       asp-route-search="@Model.Search"
                                       asp-route-type="@Model.Type">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-route-currentPage="@(Model.CurrentPage + 1)"
                                   asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                                   asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                                   asp-route-categoryId="@Model.CategoryId"
                                   asp-route-search="@Model.Search"
                                   asp-route-type="@Model.Type">
                                    Next
                                </a>
                            </li>
                        </ul>
                    </nav>
                }

                <!-- Export Options -->
                <div class="mt-3">
                    <div class="btn-group">
                        <a href="@Url.Page("Index", new { export = "csv",
                               startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                               endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                               categoryId = Model.CategoryId,
                               search = Model.Search,
                               type = Model.Type })"
                           class="btn btn-sm btn-outline-success">
                            <i class="bi bi-file-earmark-arrow-down"></i> Export to CSV
                        </a>
                        <a href="@Url.Page("Index", new { export = "print",
                               startDate = Model.StartDate?.ToString("yyyy-MM-dd"),
                               endDate = Model.EndDate?.ToString("yyyy-MM-dd"),
                               categoryId = Model.CategoryId,
                               search = Model.Search,
                               type = Model.Type })"
                           class="btn btn-sm btn-outline-primary" onclick="window.print(); return false;">
                            <i class="bi bi-printer"></i> Print
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-receipt fa-4x mb-3"></i>
                    <h4>No transactions found</h4>
                    <p class="mb-4">@(string.IsNullOrEmpty(Model.Search) ? "Try adding some transactions or adjust your filters." : "No transactions match your search criteria.")</p>
                    <a asp-page="Create" class="btn btn-success me-2">
                        <i class="bi bi-plus-circle"></i> Add Your First Transaction
                    </a>
                    <a asp-page="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-clockwise"></i> Clear Filters
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Quick Stats Modal -->
<div class="modal fade" id="quickStatsModal" tabindex="-1" aria-labelledby="quickStatsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="quickStatsModalLabel">Transaction Statistics</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="text-success fw-bold">Income</div>
                            <div class="h4">@Model.TotalIncome.ToString("C")</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center p-3 border rounded">
                            <div class="text-danger fw-bold">Expenses</div>
                            <div class="h4">@Model.TotalExpenses.ToString("C")</div>
                        </div>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <div class="fw-bold">Net Balance</div>
                    <div class="h3 @(Model.NetBalance >= 0 ? "text-success" : "text-danger")">
                        @Model.NetBalance.ToString("C")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-submit form when filters change (optional)
            document.querySelectorAll('#filterForm select, #filterForm input').forEach(function(element) {
                element.addEventListener('change', function() {
                    if (this.type !== 'text') {
                        document.getElementById('filterForm').submit();
                    }
                });
            });

            // Quick stats button
            var quickStatsBtn = document.getElementById('quickStatsBtn');
            if (quickStatsBtn) {
                quickStatsBtn.addEventListener('click', function() {
                    var modal = new bootstrap.Modal(document.getElementById('quickStatsModal'));
                    modal.show();
                });
            }

            // Row click for details (optional)
            document.querySelectorAll('tbody tr').forEach(function(row) {
                row.addEventListener('click', function(e) {
                    if (!e.target.closest('.btn-group')) {
                        var editLink = this.querySelector('a[title="Edit"]');
                        if (editLink) {
                            window.location = editLink.href;
                        }
                    }
                });
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    <style>
        tbody tr:hover {
            cursor: pointer;
            background-color: rgba(0, 0, 0, 0.02);
        }

        .badge {
            font-size: 0.85em;
            padding: 0.35em 0.65em;
        }

        .table-hover tbody tr:hover td {
            transition: background-color 0.2s ease;
        }

        .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
}