@page
@model ExpenseTracker.Pages.Budgets.CreateModel
@{
    ViewData["Title"] = "Create Budget";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" id="createForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Budget Name -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Budget.Name" class="form-label required"></label>
                                <input asp-for="Budget.Name" class="form-control"
                                       placeholder="e.g., Monthly Groceries, Entertainment Budget" />
                                <span asp-validation-for="Budget.Name" class="text-danger"></span>
                                <small class="text-muted">Enter a descriptive name for your budget</small>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Budget.Description" class="form-label"></label>
                                <textarea asp-for="Budget.Description" class="form-control" rows="3"
                                          placeholder="Optional description or notes about this budget..."></textarea>
                                <span asp-validation-for="Budget.Description" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Amount and Period -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Budget.Amount" class="form-label required"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Budget.Amount" class="form-control"
                                           type="number" step="0.01" min="0.01"
                                           placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Budget.Amount" class="text-danger"></span>
                                <small class="text-muted">Maximum amount you want to spend</small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Budget.Period" class="form-label required"></label>
                                <select asp-for="Budget.Period" class="form-select" id="periodSelect">
                                    @foreach (var option in Model.PeriodOptions)
                                    {
                                        <option value="@option.Value">@option.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Budget.Period" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Dates -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Budget.StartDate" class="form-label required"></label>
                                <input asp-for="Budget.StartDate" class="form-control"
                                       type="date" id="startDate" />
                                <span asp-validation-for="Budget.StartDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Budget.EndDate" class="form-label">End Date (Optional)</label>
                                <input asp-for="Budget.EndDate" class="form-control"
                                       type="date" id="endDate" />
                                <span asp-validation-for="Budget.EndDate" class="text-danger"></span>
                                <small class="text-muted">Leave empty for ongoing budgets</small>
                            </div>
                        </div>

                        <!-- Category -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Budget.CategoryId" class="form-label">Category (Optional)</label>
                                <select asp-for="Budget.CategoryId" class="form-select" id="categorySelect">
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Value">@category.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Budget.CategoryId" class="text-danger"></span>
                                <small class="text-muted">Select a specific category or leave as "All Categories" for overall budget</small>
                            </div>
                        </div>

                        <!-- Preview -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="bi bi-eye me-2"></i>Budget Preview</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">Budget Period:</small>
                                        <div class="fw-bold" id="previewPeriod">Monthly</div>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">Date Range:</small>
                                        <div class="fw-bold" id="previewDateRange">
                                            @DateTime.Now.ToString("MMM dd, yyyy") -
                                            @DateTime.Now.AddMonths(1).AddDays(-1).ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <small class="text-muted">Budget Limit:</small>
                                        <div class="h5 mb-0 fw-bold text-primary" id="previewAmount">$0.00</div>
                                    </div>
                                    <div>
                                        <small class="text-muted">Scope:</small>
                                        <div class="fw-bold" id="previewScope">All Categories</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle me-2"></i>Create Budget
                                </button>
                            </div>
                            <div>
                                <a asp-page="Index" class="btn btn-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Tips -->
            <div class="card shadow mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Budgeting Tips</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li><i class="bi bi-check text-success me-2"></i>Monthly budgets reset on the 1st of each month</li>
                        <li><i class="bi bi-check text-success me-2"></i>Category-specific budgets track spending for that category only</li>
                        <li><i class="bi bi-check text-success me-2"></i>Overall budgets track total spending across all categories</li>
                        <li><i class="bi bi-check text-success me-2"></i>Set realistic amounts based on your past spending</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const amountInput = document.getElementById('Budget_Amount');
            const periodSelect = document.getElementById('periodSelect');
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            const categorySelect = document.getElementById('categorySelect');

            const previewAmount = document.getElementById('previewAmount');
            const previewPeriod = document.getElementById('previewPeriod');
            const previewDateRange = document.getElementById('previewDateRange');
            const previewScope = document.getElementById('previewScope');

            function updatePreview() {
                // Update amount
                const amount = parseFloat(amountInput.value) || 0;
                previewAmount.textContent = '$' + amount.toFixed(2);

                // Update period
                const periodText = periodSelect.options[periodSelect.selectedIndex].text;
                previewPeriod.textContent = periodText;

                // Update scope
                const categoryText = categorySelect.options[categorySelect.selectedIndex].text;
                previewScope.textContent = categoryText;

                // Update date range based on period
                updateDateRange();
            }

            function updateDateRange() {
                const period = parseInt(periodSelect.value);
                const startDate = new Date(startDateInput.value || new Date());

                let endDate = new Date(startDate);

                switch (period) {
                    case 0: // Daily
                        endDate.setDate(endDate.getDate() + 1);
                        break;
                    case 1: // Weekly
                        endDate.setDate(endDate.getDate() + 7);
                        break;
                    case 2: // Monthly
                        endDate.setMonth(endDate.getMonth() + 1);
                        break;
                    case 3: // Quarterly
                        endDate.setMonth(endDate.getMonth() + 3);
                        break;
                    case 4: // Yearly
                        endDate.setFullYear(endDate.getFullYear() + 1);
                        break;
                    case 5: // Custom
                        if (endDateInput.value) {
                            endDate = new Date(endDateInput.value);
                        } else {
                            endDate.setMonth(endDate.getMonth() + 1);
                        }
                        break;
                }

                // Format dates
                const formatDate = (date) => {
                    return date.toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                        year: 'numeric'
                    });
                };

                previewDateRange.textContent = formatDate(startDate) + ' - ' + formatDate(endDate);
            }

            // Initialize preview
            updatePreview();

            // Event listeners
            amountInput.addEventListener('input', updatePreview);
            periodSelect.addEventListener('change', updatePreview);
            startDateInput.addEventListener('change', updatePreview);
            endDateInput.addEventListener('change', updatePreview);
            categorySelect.addEventListener('change', updatePreview);

            // Set minimum date to today for start date
            const today = new Date().toISOString().split('T')[0];
            startDateInput.min = today;

            // Auto-set end date based on period
            periodSelect.addEventListener('change', function() {
                const period = parseInt(this.value);
                if (period === 5) { // Custom
                    endDateInput.disabled = false;
                    return;
                }

                endDateInput.disabled = true;
                updateDateRange();
            });
        });
    </script>

    <style>
        .required:after {
            content: " *";
            color: #dc3545;
        }

        input:focus, select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
    </style>
}