<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            padding-top: 56px;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .summary-card {
            border-radius: 10px;
            border: none;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
            transition: transform 0.2s;
        }

            .summary-card:hover {
                transform: translateY(-2px);
            }

        .alert {
            animation: slideIn 0.3s ease-out;
        }

        @@keyframes slideIn {
            from

        {
            transform: translateY(-20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">
                <i class="bi bi-cash-stack me-2"></i>ExpenseTracker
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")"
                           asp-page="/Index">
                            <i class="bi bi-house-door me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Transactions/Index" ? "active" : "")"
                           asp-page="/Transactions/Index">
                            <i class="bi bi-receipt me-1"></i>Transactions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Categories/Index" ? "active" : "")"
                           asp-page="/Categories/Index">
                            <i class="bi bi-tags me-1"></i>Categories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Budgets/Index" ? "active" : "")"
                           asp-page="/Budgets/Index">
                            <i class="bi bi-piggy-bank me-1"></i>Budgets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Reports/Index" ? "active" : "")"
                           asp-page="/Reports/Index">
                            <i class="bi bi-bar-chart me-1"></i>Reports
                        </a>
                    </li>
                </ul>

                <!-- Quick Stats (optional) -->
                <div class="d-none d-lg-flex align-items-center text-white">
                    <small class="me-3">
                        <i class="bi bi-arrow-up-circle text-success me-1"></i>
                        <span id="incomeTotal">$0</span>
                    </small>
                    <small>
                        <i class="bi bi-arrow-down-circle text-danger me-1"></i>
                        <span id="expenseTotal">$0</span>
                    </small>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top mt-5 pt-3 text-muted text-center">
        <div class="container">
            <small>
                &copy; @DateTime.Now.Year - ExpenseTracker
                <span class="mx-2">•</span>
                <a href="#" class="text-muted">Privacy</a>
                <span class="mx-2">•</span>
                <a href="#" class="text-muted">Terms</a>
            </small>
        </div>
    </footer>

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Auto-hide alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>