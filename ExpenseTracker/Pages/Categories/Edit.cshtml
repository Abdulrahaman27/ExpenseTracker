@page
@model ExpenseTracker.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" id="editForm">
                        <input type="hidden" asp-for="Category.Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Category Name -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Category.Name" class="form-label required"></label>
                                <input asp-for="Category.Name" class="form-control" 
                                       placeholder="e.g., Groceries, Salary, Entertainment" />
                                <span asp-validation-for="Category.Name" class="text-danger"></span>
                                <small class="text-muted">Enter a descriptive name for your category</small>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label asp-for="Category.Description" class="form-label"></label>
                                <textarea asp-for="Category.Description" class="form-control" rows="3"
                                          placeholder="Optional description of this category..."></textarea>
                                <span asp-validation-for="Category.Description" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Type, Color, and Icon -->
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Category.Type" class="form-label required"></label>
                                <select asp-for="Category.Type" class="form-select" id="typeSelect">
                                    @foreach (var option in Model.TypeOptions)
                                    {
                                        <option value="@option.Value">@option.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Category.Type" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Category.Color" class="form-label required"></label>
                                <select asp-for="Category.Color" class="form-select" id="colorSelect">
                                    @foreach (var option in ExpenseTracker.Pages.Categories.CreateModel.ColorOptions)
                                    {
                                        var isSelected = option.Value == Model.Category.Color;
                                        <option value="@option.Value" data-color="@option.Value" selected="@isSelected">
                                            <span class="badge" style="background-color: @option.Value">@option.Text</span>
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="Category.Color" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Category.Icon" class="form-label required"></label>
                                <select asp-for="Category.Icon" class="form-select" id="iconSelect">
                                    @foreach (var option in ExpenseTracker.Pages.Categories.CreateModel.IconOptions)
                                    {
                                        var isSelected = option.Value == Model.Category.Icon;
                                        <option value="@option.Value" selected="@isSelected">
                                            <i class="bi @option.Value me-2"></i>@option.Text
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="Category.Icon" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Preview -->
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label class="form-label">Category Preview</label>
                                <div class="border rounded p-4 text-center" id="categoryPreview">
                                    <span class="badge" id="previewBadge" style="font-size: 1.2em; padding: 10px 15px;">
                                        <i class="bi @Model.Category.Icon me-2"></i>@Model.Category.Name
                                    </span>
                                    <div class="mt-2">
                                        <small class="text-muted" id="previewType">
                                            @(Model.Category.Type == ExpenseTracker.Data.Models.TransactionType.Income ? "Income" : "Expense") Category
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Keywords for smart suggestions -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-lightbulb me-2"></i>Smart Suggestions Keywords
                                </h6>
                                <small class="text-muted">Add keywords to help auto-categorize transactions</small>
                            </div>
                            <div class="card-body">
                                <div id="keywordsContainer">
                                    @for (int i = 0; i < Model.Category.Keywords.Count; i++)
                                    {
                                        <div class="input-group mb-2 keyword-input">
                                            <input type="text" asp-for="Category.Keywords[i]" class="form-control" 
                                                   placeholder="e.g., grocery, supermarket, food" />
                                            <button type="button" class="btn btn-outline-danger" onclick="removeKeyword(this)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="addKeyword()">
                                    <i class="bi bi-plus-circle me-1"></i>Add Keyword
                                </button>
                                <small class="text-muted d-block mt-2">Transactions containing these keywords will be suggested for this category</small>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between">
                            <div>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle me-2"></i>Update Category
                                </button>
                            </div>
                            <div>
                                <a asp-page="Index" class="btn btn-secondary">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                                <a asp-page="Details" asp-route-id="@Model.Category.Id" class="btn btn-info ms-2">
                                    <i class="bi bi-eye me-2"></i>View Details
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Tips -->
            <div class="card shadow mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Editing Tips</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li><i class="bi bi-check text-success me-2"></i>Changing the color/icon updates all existing transactions</li>
                        <li><i class="bi bi-check text-success me-2"></i>Keywords help with automatic transaction categorization</li>
                        <li><i class="bi bi-check text-success me-2"></i>You cannot change category type if it has transactions</li>
                        <li><i class="bi bi-check text-success me-2"></i>Categories with transactions cannot be deleted</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const nameInput = document.getElementById('Category_Name');
            const typeSelect = document.getElementById('typeSelect');
            const colorSelect = document.getElementById('colorSelect');
            const iconSelect = document.getElementById('iconSelect');
            const previewBadge = document.getElementById('previewBadge');
            const previewType = document.getElementById('previewType');

            function updatePreview() {
                const name = nameInput.value || '@Model.Category.Name';
                const color = colorSelect.value;
                const icon = iconSelect.value;
                const typeText = typeSelect.options[typeSelect.selectedIndex].text;

                // Update badge
                const iconElement = `<i class="bi ${icon} me-2"></i>`;
                previewBadge.innerHTML = iconElement + name;
                previewBadge.style.backgroundColor = color;

                // Update type text
                previewType.textContent = `${typeText} Category`;
            }

            // Initialize preview with current values
            updatePreview();

            // Set initial color on badge
            previewBadge.style.backgroundColor = '@Model.Category.Color';

            // Event listeners
            nameInput.addEventListener('input', updatePreview);
            typeSelect.addEventListener('change', updatePreview);
            colorSelect.addEventListener('change', updatePreview);
            iconSelect.addEventListener('change', updatePreview);

            // Initialize keywords array index
            window.keywordIndex = @Model.Category.Keywords.Count;
        });

        function addKeyword() {
            const container = document.getElementById('keywordsContainer');
            const div = document.createElement('div');
            div.className = 'input-group mb-2 keyword-input';
            div.innerHTML = `
                <input type="text" name="Category.Keywords[${window.keywordIndex}]" 
                       class="form-control" placeholder="e.g., grocery, supermarket, food" />
                <button type="button" class="btn btn-outline-danger" onclick="removeKeyword(this)">
                    <i class="bi bi-trash"></i>
                </button>
            `;
            container.appendChild(div);
            window.keywordIndex++;
        }

        function removeKeyword(button) {
            button.closest('.keyword-input').remove();
        }
    </script>

    <style>
        .required:after {
            content: " *";
            color: #dc3545;
        }

        #categoryPreview {
            min-height: 100px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        #previewBadge {
            transition: all 0.3s ease;
        }

        .keyword-input input:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        /* Style color options */
        #colorSelect option {
            padding-left: 30px;
            position: relative;
        }

        #colorSelect option::before {
            content: '';
            position: absolute;
            left: 5px;
            top: 50%;
            transform: translateY(-50%);
            width: 15px;
            height: 15px;
            border-radius: 3px;
        }

        /* Dynamically set background color for each option */
        @foreach (var option in ExpenseTracker.Pages.Categories.CreateModel.ColorOptions)
        {
            <text>
                #colorSelect option[value="@option.Value"]::before {
                    background-color: @option.Value;
                }
            </text>
        }
    </style>
}